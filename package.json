{
  "name": "@azerella/koa-pg-rest-api",
  "version": "1.0.0",
  "description": "Scaffolding for an opinionated RESTful API using Koa and PostgreSQL.",
  "private": true,
  "scripts": {
    "test": "mocha",
    "dev": "nodemon",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "build": "run-s build:*",
    "build:clean": "rimraf dist/",
    "build:js": "esbuild src/server.ts --platform=node --bundle --outdir=dist --external:knex --external:pg --target=node16 --minify --legal-comments=none",
    "db": "run-s db:*",
    "db:rollback": "knex migrate:rollback --all",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "docs": "run-s docs:*",
    "docs:schemas": "typeconv -f ts -t oapi --oapi-format json -o docs/dist/  'src/routes/**/types.ts'",
    "docs:build": "tsc -p ./docs/tsconfig.json",
    "docs:generate": "node docs/dist/src/spec.js"
  },
  "engines": {
    "node": "~16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adam-Zerella/koa-pg-rest-api.git"
  },
  "keywords": [
    "koa",
    "pg",
    "rest",
    "restful",
    "api",
    "scaffold"
  ],
  "author": "Adam A. Zerella <https://azerel.la> (hi@azerel.la)",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.2.0",
    "@koa/router": "^10.1.1",
    "dotenv": "^16.0.0",
    "knex": "^1.0.4",
    "knex-paginate": "^3.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "pg": "^8.7.3",
    "pino": "^7.9.2",
    "ramda": "^0.28.0",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa__cors": "^3.1.1",
    "@types/koa__router": "^8.0.11",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/ramda": "^0.28.2",
    "@types/sinon": "^10.0.11",
    "@types/yup": "^0.29.13",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.6",
    "esbuild": "^0.14.27",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.6.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typeconv": "^1.7.0",
    "typescript": "^4.6.3"
  }
}
